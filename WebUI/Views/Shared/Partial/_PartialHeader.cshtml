<!--**********************************
	Main wrapper start
***********************************-->



<div id="main-wrapper">

	<!--**********************************
		Nav header start
	***********************************-->
	<div class="nav-header">
		<a href="/Home" class="brand-logo">
			<svg class="logo-abbr" xmlns="http://www.w3.org/2000/svg" width="62" height="62" viewBox="0 0 62 62">
				<circle cx="31" cy="31" r="31" fill="#f73a0b"></circle>
				<text x="15" y="50" font-family="Segoe UI, sans-serif" font-size="55" fill="white" font-weight="bold">P</text>
			</svg>

			<!-- Yazı kısmı (görüntüyü tamamlar) -->
			<svg class="brand-title" xmlns="http://www.w3.org/2000/svg" width="160" height="60" viewBox="0 0 200 60">
				<text x="0" y="35" font-family="Poppins, sans-serif" font-size="26" fill="#464646" font-weight="600">ParkSoft</text>
				<text x="0" y="52" font-family="Poppins, sans-serif" font-size="12" fill="#787878" font-weight="300">Akıllı Otopark Yönetimi</text>
			</svg>

		</a>
		<div class="nav-control">
			<div class="hamburger">
				<span class="line"></span><span class="line"></span><span class="line"></span>
			</div>
		</div>
	</div>
	<div class="header">
		<div class="header-content">
			<nav class="navbar navbar-expand">
				<div class="collapse navbar-collapse justify-content-between">
					<div class="header-left">
						<div class="dashboard_bar">
							
						</div>
					</div>
					<ul class="navbar-nav header-right">
						<li class="nav-item dropdown notification_dropdown">
							<a class="nav-link bell dz-theme-mode p-0" href="javascript:void(0);">
								<i id="icon-light" class="fas fa-sun"></i>
								<i id="icon-dark" class="fas fa-moon"></i>

							</a>
						</li>
						<li class="nav-item dropdown header-profile">
							<a class="nav-link" href="javascript:void(0);" role="button" data-bs-toggle="dropdown">
								@if (User.Identity.IsAuthenticated)
								{
									<span class="user-name">@User.Identity.Name</span>
								}
                                else
                                {

									<span class="user-name">Giriş Yap</span>
								}
							</a>
							<div class="dropdown-menu dropdown-menu-end">
								@if (User.Identity.IsAuthenticated)
								{
									<a asp-controller="Account" asp-action="Logout" class="dropdown-item ai-icon">
										<svg xmlns="http://www.w3.org/2000/svg" class="text-danger" width="18" height="18" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><path d="M9 21H5a2 2 0 0 1-2-2V5a2 2 0 0 1 2-2h4"></path><polyline points="16 17 21 12 16 7"></polyline><line x1="21" y1="12" x2="9" y2="12"></line></svg>
										<span class="ms-2">Çıkış Yap</span>
									</a>
								}
								else
								{
									<a asp-controller="Account" asp-action="Login" class="dropdown-item ai-icon">
										<svg xmlns="http://www.w3.org/2000/svg" class="text-primary" width="18" height="18" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><path d="M15 3h4a2 2 0 0 1 2 2v14a2 2 0 0 1-2 2h-4"></path><polyline points="10 17 15 12 10 7"></polyline><line x1="15" y1="12" x2="3" y2="12"></line></svg>
										<span class="ms-2">Giriş Yap</span>
									</a>
								}
							</div>
						</li>
						<li class="nav-item">

						</li>
					</ul>
				</div>
			</nav>
		</div>
	</div>
