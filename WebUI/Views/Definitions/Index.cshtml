@{
    ViewData["Title"] = "Tanımlamalar";
}

<div class="container-fluid">
    <div class="row">
        <div class="col-12">
            <div class="card">
                <div class="card-header">
                    <h4 class="card-title">Tanımlamalar</h4>
                </div>
                <div class="card-body">
                    <div class="row">
                        <!-- Araç Tanımlamaları -->
                        <div class="col-md-6 col-lg-4 mb-4">
                            <div class="card h-100">
                                <div class="card-header bg-primary text-white">
                                    <h5 class="card-title mb-0">
                                        <i class="fas fa-car me-2"></i>Araç Tanımlamaları
                                    </h5>
                                </div>
                                <div class="card-body">
                                    <div class="d-grid gap-2">
                                        <a href="@Url.Action("Index", "VehicleBrand")" class="btn btn-outline-primary">
                                            <i class="fas fa-trademark me-2"></i>Araç Markaları
                                        </a>
                                        <a href="@Url.Action("Index", "VehicleModel")" class="btn btn-outline-primary">
                                            <i class="fas fa-car-side me-2"></i>Araç Modelleri
                                        </a>
                                        <a href="@Url.Action("Index", "VehicleType")" class="btn btn-outline-primary">
                                            <i class="fas fa-truck me-2"></i>Araç Türleri
                                        </a>
                                        <a href="@Url.Action("Index", "VehicleColor")" class="btn btn-outline-primary">
                                            <i class="fas fa-palette me-2"></i>Araç Renkleri
                                        </a>
                                        <a href="@Url.Action("Index", "VehicleYear")" class="btn btn-outline-primary">
                                            <i class="fas fa-calendar-alt me-2"></i>Araç Yılları
                                        </a>
                                    </div>
                                </div>
                            </div>
                        </div>

                        <!-- Park Yönetimi -->
                        <div class="col-md-6 col-lg-4 mb-4">
                            <div class="card h-100">
                                <div class="card-header bg-success text-white">
                                    <h5 class="card-title mb-0">
                                        <i class="fas fa-parking me-2"></i>Park Yönetimi
                                    </h5>
                                </div>
                                <div class="card-body">
                                    <div class="d-grid gap-2">
                                        <a href="@Url.Action("Index", "ParkLocation")" class="btn btn-outline-success">
                                            <i class="fas fa-map-marker-alt me-2"></i>Park Yerleri
                                        </a>
                                        <a href="@Url.Action("Index", "KeyLocation")" class="btn btn-outline-success">
                                            <i class="fas fa-key me-2"></i>Anahtar Yerleri
                                        </a>
                                        <a href="@Url.Action("Index", "LinkingRegion")" class="btn btn-outline-success">
                                            <i class="fas fa-link me-2"></i>Bağlama Bölgeleri
                                        </a>
                                        <a href="@Url.Action("Index", "LinkingReason")" class="btn btn-outline-success">
                                            <i class="fas fa-question-circle me-2"></i>Bağlama Nedenleri
                                        </a>
                                    </div>
                                </div>
                            </div>
                        </div>

                        <!-- İcra İşlemleri -->
                        <div class="col-md-6 col-lg-4 mb-4">
                            <div class="card h-100">
                                <div class="card-header bg-danger text-white">
                                    <h5 class="card-title mb-0">
                                        <i class="fas fa-gavel me-2"></i>İcra İşlemleri
                                    </h5>
                                </div>
                                <div class="card-body">
                                    <div class="d-grid gap-2">
                                        <a href="@Url.Action("Index", "EnforcementOffice")" class="btn btn-outline-danger">
                                            <i class="fas fa-building me-2"></i>İcra Daireleri
                                        </a>
                                    </div>
                                </div>
                            </div>
                        </div>
                        <!-- Genel Ayarlar Yönetimi -->
                        <div class="col-md-6 col-lg-4 mb-4">
                            <div class="card h-100">
                                <div class="card-header bg-light text-white">
                                    <h5 class="card-title mb-0">
                                        <i class="fas fa-sitemap me-2"></i>Genel Ayarlar
                                    </h5>
                                </div>
                                <div class="card-body">
                                    <div class="d-grid gap-2">
                                        <a href="@Url.Action("PricingSettings", "Vehicle")" class="btn btn-outline-dark">
                                            <i class="fas fa-try me-2"></i>Fiyatlandırma
                                        </a>
                                    </div>
                                </div>
                            </div>
                        </div>
                        <!-- Şube Yönetimi -->
                        <div class="col-md-6 col-lg-4 mb-4">
                            <div class="card h-100">
                                <div class="card-header bg-info text-white">
                                    <h5 class="card-title mb-0">
                                        <i class="fas fa-sitemap me-2"></i>Şube Yönetimi
                                    </h5>
                                </div>
                                <div class="card-body">
                                    <div class="d-grid gap-2">
                                        <a href="@Url.Action("Index", "Branch")" class="btn btn-outline-info">
                                            <i class="fas fa-building me-2"></i>Şubeler
                                        </a>
                                    </div>
                                </div>
                            </div>
                        </div>


                   
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section Styles {
    <style>
        .card {
            transition: transform 0.2s;
            box-shadow: 0 0.125rem 0.25rem rgba(0, 0, 0, 0.075);
        }
        .btn {
            text-align: left;
            padding: 0.75rem 1rem;
            font-weight: 500;
        }
        .btn i {
            width: 1.5rem;
            text-align: center;
        }
        .card-header {
            border-bottom: none;
        }
        .card-header h5 {
            font-size: 1.1rem;
        }
    </style>
} 